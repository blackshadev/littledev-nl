{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "prHourlyLimit": 8,
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "schedule": ["on the last day of the month"]
    },
    "packageRules": [
        {
            "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
            "automerge": true,
            "groupName": "all non-major dependencies",
            "groupSlug": "all-non-major-patch"
        }
    ]
}
